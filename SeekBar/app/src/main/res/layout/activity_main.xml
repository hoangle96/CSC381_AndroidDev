<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leh2.seekbar.MainActivity">

    <SeekBar
        android:id="@+id/sB0"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="20dp"
        android:layout_marginBottom="140dp"
        android:max="12"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/btnShow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/sB1"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:max="12"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/sB0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <SeekBar
        android:id="@+id/sB2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:max="12"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/sB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sB3"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:max="12"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/sB2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sB4"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:max="12"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/sB3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/sB5"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="255dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:max="12"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/sB4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/tVShow"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:text="Show"
        app:layout_constraintBottom_toTopOf="@+id/tVShow"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
